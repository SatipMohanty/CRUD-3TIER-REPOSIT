@model IEnumerable<MVC3TIER.Models.TIER.entity_class.dept_cls>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover table table-bordered" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.did)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dloc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.no_of_emp)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.did)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dloc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.no_of_emp)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.did }) |
                @Html.ActionLink("Details", "Details", new { id = item.did }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.did })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
